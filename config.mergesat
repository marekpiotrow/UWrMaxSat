BUILD_DIR?=build
MAXPRE?=-D MAXPRE
USESCIP?=-D USE_SCIP -pthread
BIGWEIGHTS?=#-D BIG_WEIGHTS
MINISATP_RELSYM?=
MINISATP_REL?=-std=c++11 -O3 -D NDEBUG -Wno-strict-aliasing -D MERGESAT   $(MAXPRE) $(USESCIP) $(BIGWEIGHTS)
MINISATP_DEB?=-std=c++11 -O0 -D DEBUG  -Wno-strict-aliasing -D MERGESAT   $(MAXPRE) $(USESCIP) $(BIGWEIGHTS)
MINISATP_PRF?=-std=c++11 -O3 -D NDEBUG -Wno-strict-aliasing -D MERGESAT   $(MAXPRE) $(USESCIP) $(BIGWEIGHTS)
MINISATP_FPIC?=-fpic
MINISAT_INCLUDE?=-I/include -I/include/minisat -I../mergesat
MINISAT_LIB?=-L/lib -L../mergesat/build/release/lib -lmergesat $(USESCIP)
ifneq ($(MAXPRE),)
MCL_INCLUDE?=-I../maxpre/src
MCL_LIB?=-L../maxpre/src/lib -lmaxpre
else
MCL_INCLUDE?=
MCL_LIB?=
endif
ifneq ($(USESCIP),)
MCL_INCLUDE+=-I../scipoptsuite-8.1.0/scip/src -I../scipoptsuite-8.1.0/build/scip
MCL_LIB+=-L../scipoptsuite-8.1.0/build/lib -lscip -lsoplex-pic
endif
prefix?=
